<%= form_for(@movie) do |f| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% @movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :poster %>
    <%= f.file_field :poster %>
  </div>
  <div class="field">
    <%= f.label :preview %><br>
    <%= f.text_area :preview %>
  </div>
  <div class="field">
    <%= f.label :full_script %><br>
    <%= f.text_area :full_script %>
  </div>
 <% if(@genres != nil) %>
  <div class="movies_choose_genre">
    <% @movie_genres = @movie.genres %>
    <% @genres.each do |g| %>
      <div class="movies_choose_genre_div">
        <label><%= g.name %></label>
        <% if !!@movie_genres.detect {|m_genre| m_genre[:name] == g.name } %>
         <%= check_box_tag g.name, g.name, :checked => true %>
        <% else %>
         <%= check_box_tag g.name, g.name %>
        <% end %>
      </div>
    <% end %>
  </div>
 <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
