<h1>Listing movies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Preview</th>
      <th>Full script</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= image_tag movie.poster.url %></td>
        <td><%= movie.name %></td>
        <td><%= movie.preview %></td>
        <td><%= movie.full_script %></td>
        <td><%= link_to 'Show', movie %></td>
<% if movie.user == current_user && current_user != nil %>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
<% end %>
<% if movie.user == current_user && current_user != nil || admin_user %>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if signed_in? %>
<%= link_to 'New Movie', new_movie_path %>
<% end %>
