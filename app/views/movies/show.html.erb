<p id="notice"><%= notice %></p>

<p>
  <strong>Poster:</strong>
  <%= image_tag @movie.poster.url %>

</p>
<p>
  <div class="movie_genres_list">
    <% @genre_last = @movie.genres.last %>
    <% @movie.genres.each do |m_genres| %>
       <li class="movie_genres_list_item"><%= link_to m_genres.name, controller: "genres", action: 'show', id: m_genres %>
       <% if m_genres != @genre_last %>,
       <% end %>
       </li>
    <% end %>
  </div>
</p>
<p>
  <strong>Name:</strong>
  <%= @movie.name %>
</p>

<p>
  <strong>Preview:</strong>
  <%= @movie.preview %>
</p>

<p>
  <strong>Full script:</strong>
  <%= @movie.full_script %>
</p>

<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>
