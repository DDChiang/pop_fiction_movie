<div class="show_movie">
  <p id="notice"><%= notice %>
  </p>

    <%= image_tag @movie.poster.url %>
	<br>
	<br>
	<br>

  <br>
  <div class="show_movie_name">
    <%= @movie.name %>
  </div>
  Votes: <%= @movie.voters.count %>
  <br>
  <span id="movie_show_preview">
      <%= @movie.preview %>
  </span>
  <br>
  <br>
  <div id="movie-script"><%= @movie.full_script %></div>
  <br><br>
  <div class="movie_genres_list">
    <% @genre_last = @movie.genres.last %>
      genres:
      <% @movie.genres.each do |m_genres| %>
          <%= link_to m_genres.name, controller: "genres", action: "show", id: m_genres %><% if m_genres != @genre_last %>, <% end %>
      <% end %>
      <br>
      <br>
  </div>
  <div class="show_movie_links">
    <% if current_user != nil && current_user?(@movie.user)%>
      <%= link_to 'Edit', edit_movie_path(@movie) %> |
    <% end %>
    <% if (current_user != nil && current_user?(@movie.user) || admin_user) %>
       <%= link_to 'Delete Movie', @movie, method: "delete", data: { confirm: 'Are you sure?'} %> | 
    <% end %>
    <%= link_to 'Back', movies_path %>
  </div>
</div>
